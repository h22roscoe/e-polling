<!DOCTYPE HTML>
<html lang="en">
{{> header}}
<body>
  <div class="container">
    <div class="row">
      <h2 id="debate-title" class="col offset-s1">Debate title goes here</h2>
    </div>
    <div class="row">
      <div class="col s3 offset-s1" style="padding-top:50px;">
        <div id="nav-list" class="collection">
        </div>
      </div>
      <div class="col s6 offset-s1">
        <h4 id="question" align="center" style="padding-top:50px;">Questionnen ist here</h4>
        <form style="padding-top:100px;">
          <div class="row">
            How much do you agree?
            <div class="input-field">
              <p class="range-field">
                <input id="question-slider" type="range" min="0" max="100" />
              </p>
            </div>
          </div>
          <div class="row">
            <div class="input-field">
              <label for="opinion-area">Reasoning (optional)</label>
              <textarea id="opinion-area" class="materialize-textarea"></textarea>
            </div>
          </div>
          <div class="right-align">
            <button id="nextQ" class="btn waves-effect waves-light" type="submit">Next
              <i class="material-icons right">send</i>
            </button>
            <button id="finalQ" class="btn waves-effect waves-light" type="submit">Submit
              <i class="material-icons right">send</i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script src="/src/vote.js"></script>
</body>
